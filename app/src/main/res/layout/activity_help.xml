<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jeyanthasingam.busroutefinder.Help">

    <TextView
        android:text="To find the buses that will take you from one bus stop to other bus stop"
        android:id="@+id/textView7"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="180dp" />

    <TextView
        android:text="To find the buses that will take you from one bus stop to other bus stop"
        android:layout_width="180dp"
        android:id="@+id/textView5"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="@string/location_to_ndestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/sigams_bg_color"
        android:gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="To find the buses that will take you from one bus stop to other bus stop"
        android:layout_width="180dp"
        android:id="@+id/textView9"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/location_to_ndestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/sigams_bg_color"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:text="@string/bus_stop_to_nbus_stop_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/sigams_bg_color"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="To find the buses that will take you from one bus stop to other bus stop"
        android:id="@+id/textView11"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="180dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:text="@string/location_to_ndestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/sigams_bg_color"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignStart="@+id/textView10" />
</RelativeLayout>
